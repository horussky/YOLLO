/*  SECTIONS  */
.section {
	clear: both;
	padding: 0px;
	margin: 0px;
}

/*  COLUMN SETUP  */
.col {
	display: block;
	float:left;
	margin: 1% 0 1% 1.6%;
}
.col:first-child { margin-left: 0; }

/*  GRID OF THREE  */
.span_3_of_3 {
	width: 100%;
}
.span_2_of_3 {
	width: 66.1%;
}
.span_1_of_3 {
	width: 32.2%;
}

/*  GRID OF FOUR  */
.span_4_of_4 {
	width: 100%;
}
.span_3_of_4 {
	width: 74.6%;
}
.span_2_of_4 {
	width: 49.2%;
}
.span_1_of_4 {
	width: 23.8%;
}

/*  GRID OF TWO  */


.span_2_of_2 {
	width: 100%;
}

.span_1_of_2 {
	width: 49.2%;
}


@media only screen and (max-width: 640px) {
	
/*  GRID OF THREE */
	.span_3_of_3,
	.span_2_of_3,
	.span_1_of_3{width: 100%; }
		
	
/*  GRID OF FOUR  */
	.span_4_of_4,
	.span_3_of_4,
	.span_2_of_4,
	.span_1_of_4 { width: 100%;}

/*  GRID OF TWO  */
	.span_2_of_2,
	.span_1_of_2 {width: 100%;}
	
	
	.col{padding-top:10px; padding-bottom:10px;}
		
}



/*  GROUPING  */
.group:before,
.group:after {
	content:"";
	display:table;
}
.group:after {
	clear:both;
}
