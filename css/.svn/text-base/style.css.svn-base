*{margin:0; padding:0; outline: none;}
body {
	background: #EEE;	
	font-family: "Trebuchet MS",Verdana,Arial,sans-serif;
	font-size: 14px;
	line-height: 1.6;
}

p {padding: 7px 0;}
a { outline-color: #888;}

#content {
	width: 820px;
	margin: 0 auto;
	padding: 20px;
	background: #FFF;	
	border: 1px solid #CCC;
	overflow:hidden;
	position:relative;
}

/* Edits */
		
		div#feature_list { 				width: 820px; height: 356px; position: relative;}
		div#feature_list ul {			width: 820px; position: absolute; top: 0;  list-style: none; float:left;}

		
		/* TABS */
		
		ul#tabs { 						width: 820px; clear:both;}
		ul#tabs li { 					font-size: 12px; font-family: Arial; width: 203px; float:left; list-style:none; border:1px solid #bbb; }		
		ul#tabs li a { 					color: #222; text-decoration: none; display: block; padding: 10px; width: 183px; height: 60px;  float:left;}
		ul#tabs li img { 				padding: 5px; border: none; float: left; margin: 10px 10px 0 0;}
		ul#tabs li a:hover { 			text-decoration: underline;}
		ul#tabs li a.current { 			background: url(../images/feature-tab-current.png); color: #FFF;}
		ul#tabs li a.current:hover { 	text-decoration: none; cursor: default;}

		/* OUTPUT */
		
		ul#output { 					width: 820px; height: 240px; position: relative; }
		ul#output li { 					position: absolute; width: 820px; height: 240px; background:#cecece;}	
		ul#output li a { 				position: absolute; bottom: -100px; right: 10px; padding: 8px 12px; text-decoration: none; font-size: 11px; color: #FFF; 
										background-color:#000; background: rgb(0,0,0, 0.3); background: rgba(0,0,0, 0.6);  /* IE patch */ }
		ul#output li a:hover {			background: #D33431;}
		
		
		
		
/*DROP DOWN MENU*/
#nav{							width:860px; height:60px; margin-top:20px;  clear:both;}
/* LEVEL ONE */
ul.dropdown                         { position: relative; }
ul.dropdown li                      { font:bold 16px "Times New Roman", Times, serif; float: left; zoom: 1;  text-transform:uppercase; list-style:none; }
ul.dropdown li em                   { font:normal 11px Helvetica, Arial, sans-serif; display:block; text-transform: lowercase;}
ul.dropdown a:hover		            { color: #000; }
ul.dropdown a:active                { color: #ffa500; }
ul.dropdown li a                    { display: block; padding: 4px 20px; border-right: 1px solid #ccc; text-decoration:none;
	 								  color: #222; }
ul.dropdown li:last-child a         { border-right: none; } /* Doesn't work in IE */
ul.dropdown li.hover,
ul.dropdown li:hover                { background-color:#D6D6D6; background: rgb(204,204,204,0.8); background: rgba(204,204,204,0.8); filter:alpha(opacity=90); /* IE patch */ 
									 color: #000; position: relative; border:none; }
ul.dropdown li.hover a              { color: #000;  }


/* 
	LEVEL TWO
*/
ul.sub_menu li{						font:normal 13px Helvetica, Arial, sans-serif;}
ul.dropdown ul 						{ width: 262px; visibility: hidden; position: absolute; top: 100%; left: -1px; z-index:1000000; 
									background-color:#D6D6D6; background: rgb(204,204,204,0.8); background: rgba(204,204,204,0.8); filter:alpha(opacity=90); /* IE patch */   padding:10px 0; color:#fff;
									-moz-border-radius-topright: 4px; -webkit-border-top-right-radius: 4px;
									-moz-border-radius-bottomleft: 4px; -webkit-border-bottom-left-radius: 4px;
									-moz-border-radius-bottomright: 4px; -webkit-border-bottom-right-radius: 4px; }
ul.dropdown ul li 					{ font-weight: normal; text-transform:none; font:normal 13px Helvetica, Arial, sans-serif; color: #000; float: none; zoom: 1;  }
									  
                                    /* IE 6 & 7 Needs Inline Block */
ul.dropdown ul li a					{ border-right: none; width: 222px; display: inline-block; } 
ul.dropdown ul li a:hover			{ color: #fff; background-color:#bf1d2d; background: rgb(191,29,45,0.5); background: rgba(191,29,45,0.5); filter:alpha(opacity=50); /* IE patch */ } 